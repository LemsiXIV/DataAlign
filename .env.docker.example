# Variables d'environnement pour Docker Production
# Copiez ce fichier en .env.docker et modifiez les valeurs

# Application Flask
FLASK_ENV=production
DEBUG=False
SECRET_KEY=CHANGEZ_CETTE_CLE_SECRETE_TRES_LONGUE_ET_COMPLEXE
SECURITY_PASSWORD_SALT=AUTRE_CLE_SECRETE_POUR_TOKENS_DE_RESET

# Base de donn√©es MySQL
DATABASE_URL=mysql://dataalign_prod:MOT_DE_PASSE_FORT@mysql:3306/dataalign_prod
MYSQL_ROOT_PASSWORD=MOT_DE_PASSE_ROOT_MYSQL
MYSQL_DATABASE=dataalign_prod
MYSQL_USER=dataalign_prod
MYSQL_PASSWORD=MOT_DE_PASSE_UTILISATEUR_MYSQL

# Email Configuration (Production)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=votre@email.com
MAIL_PASSWORD=mot_de_passe_application_gmail
MAIL_DEFAULT_SENDER=votre@email.com

# Redis (Cache et Sessions)
REDIS_PASSWORD=MOT_DE_PASSE_REDIS_FORT

# Monitoring (Optionnel)
GRAFANA_PASSWORD=mot_de_passe_grafana

# SSL/TLS (si vous avez des certificats)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Limites de ressources
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/uploads
PERMANENT_SESSION_LIFETIME=3600

# Logs
LOG_LEVEL=INFO
